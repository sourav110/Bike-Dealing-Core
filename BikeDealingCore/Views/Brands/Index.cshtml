@model IEnumerable<BikeDealingCore.Models.Brand>

@{
    //ViewBag["Title"] = "brand-index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-6">
        <h3 class="text-info">All Bikes Brands (Total : @Model.Count())</h3>
    </div>

    <div class="col-md-6 text-right">
        <a class="btn btn-info" asp-action="Create">Create New Brand</a>
    </div>
    <hr />
    
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="table-info">
                <th>Brand Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var brand in Model)
            {
                <tr>
                    <td>@brand.Name</td>
                    <td class="text-right">
                        <div class="btn-group">
                            <button class="btn btn-primary">View</button>
                            <a class="btn btn-success" asp-action="Edit" asp-route-id="@brand.Id">Edit</a>
                            <form method="post" action="Delete">
                                <input onclick="if (!confirm('Are you sure to delete?')) { return false }" type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@brand.Id" value="Delete" />
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

